<div class="weatherWrapper">
    <div class="weatherIntro">
        <h2>All Complaints</h2>
    </div>
    {{#each weathers}}
    <div class="weatherContainer">
        <div class="weatherImageDiv">
            <img class="weatherImage" src="{{this.weather}}">
        </div>
        <div class="weatherTitle">
            <p>{{this.dayName}} | {{this.dayNumber}}</p>
        </div>
        <div class="weatherDescription">
            <p>{{this.temp}}</p>
            <p>{{this.weatherDesc}}</p>
        </div>
        <div class="weatherComplaints">
            {{#each this.complaints}}
            <div class="individualComplaint">
                <p class="authorComplaint">{{this.author}}</p>
                <p class="complaint">{{this.body}}</p>
            </div>
            <br>
            {{/each}}
        </div>
    </div>
    {{/each}}
</div>